<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:cardCornerRadius="15dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        >
        <ImageView
            android:id="@+id/bgImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/blackboard"
            android:scaleType = "centerCrop"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/more_vert"
            android:layout_alignParentEnd="true"
            />

        <TextView
            android:id="@+id/classroom_name"
            android:layout_width="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:maxLines="2"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto"
            android:ellipsize="end"
            android:text="Software Architecture"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textViewTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/classroom_name"
            android:layout_marginStart="45dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/roboto"
            android:text="Total Students : "
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textViewTotal"
            android:layout_below="@id/classroom_name"
            android:layout_marginTop="30dp"
            android:layout_marginStart="45dp"
            android:text="100"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto"
            />


        <TextView
            android:id="@+id/codeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewTotal"
            android:layout_marginStart="45dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto"
            android:text="Code: "
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/count"
           android:layout_toRightOf="@id/count"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="-60dp"
            android:fontFamily="@font/roboto"
            android:text="NS45A"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>